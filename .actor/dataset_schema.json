{
  "actorSpecification": 1,
  "fields": {
    "type": "object",
    "properties": {
      "id": { "type": ["string", "number"], "description": "Unique Instagram post ID" },
      "type": { "type": "string", "description": "Post type: Image | Video | Sidecar (carousel) | profile_info" },
      "shortCode": { "type": "string", "description": "Instagram post shortcode (used in URLs)" },
      "url": { "type": "string", "description": "Direct URL to the Instagram post" },
      "timestamp": { "type": "string", "format": "date-time", "description": "ISO 8601 timestamp when post was created" },
      "caption": { "type": "string", "description": "Post caption text" },
      "alt": { "type": ["string", "null"], "description": "Accessibility alt text" },
      "hashtags": { "type": "array", "items": { "type": "string" }, "description": "Array of hashtags (without #)" },
      "mentions": { "type": "array", "items": { "type": "string" }, "description": "Array of mentioned usernames (without @)" },
      "sponsors": { "type": "array", "items": { "type": "string" }, "description": "Array of sponsored/tagged business accounts" },
      "likesCount": { "type": ["integer", "number"], "description": "Number of likes" },
      "commentsCount": { "type": ["integer", "number"], "description": "Number of comments" },
      "videoViewCount": { "type": ["integer", "number"], "description": "Video view count (0 for non-videos)" },
      "displayUrl": { "type": "string", "description": "URL of the main display image/thumbnail" },
      "images": { "type": "array", "items": { "type": "string" }, "description": "Array of all image URLs in the post" },
      "videoUrl": { "type": ["string", "null"], "description": "Video URL (null for non-videos)" },
      "videoDuration": { "type": ["integer", "number", "null"], "description": "Video duration in milliseconds (null for non-videos)" },
      "dimensionsHeight": { "type": ["integer", "number"], "description": "Height in pixels" },
      "dimensionsWidth": { "type": ["integer", "number"], "description": "Width in pixels" },
      "paidPartnership": { "type": "boolean", "description": "Instagram's official paid partnership flag" },
      "isSponsored": { "type": "boolean", "description": "Alternative sponsored content indicator" },
      "username": { "type": "string", "description": "Username of the profile being scraped" },
      "inputUrl": { "type": "string", "description": "Original profile URL that was scraped" }
    }
  },
  "views": {
    "overview": {
      "title": "Posts",
      "transformation": {
        "fields": [
          "username",
          "shortCode",
          "type",
          "timestamp",
          "caption",
          "hashtags",
          "mentions",
          "sponsors",
          "likesCount",
          "commentsCount",
          "videoViewCount",
          "displayUrl",
          "images",
          "videoUrl",
          "videoDuration",
          "dimensionsHeight",
          "dimensionsWidth",
          "paidPartnership",
          "isSponsored",
          "url",
          "id"
        ]
      },
      "display": {
        "component": "table",
        "properties": {
          "displayUrl": { "label": "Image", "format": "image" },
          "url": { "label": "Post", "format": "link" },
          "timestamp": { "label": "Time", "format": "date" },
          "likesCount": { "label": "Likes", "format": "number" },
          "commentsCount": { "label": "Comments", "format": "number" },
          "videoViewCount": { "label": "Views", "format": "number" },
          "images": { "label": "Images", "format": "array" },
          "videoUrl": { "label": "Video", "format": "link" },
          "videoDuration": { "label": "Duration (ms)", "format": "number" },
          "caption": { "label": "Caption", "format": "text" },
          "shortCode": { "label": "Shortcode", "format": "text" },
          "type": { "label": "Type", "format": "text" },
          "hashtags": { "label": "Hashtags", "format": "array" },
          "mentions": { "label": "Mentions", "format": "array" },
          "sponsors": { "label": "Sponsors", "format": "array" },
          "paidPartnership": { "label": "Paid Partnership", "format": "boolean" },
          "isSponsored": { "label": "Sponsored", "format": "boolean" }
        }
      }
    }
  }
}

